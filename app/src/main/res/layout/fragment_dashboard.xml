<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Edificio:"
        android:id="@+id/txtEdificioFD"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Piso:"
        android:id="@+id/txtPisoFD"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spDivisionFD"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spDescripcionD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnInsertarFD"
            android:text="Insertar"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RGBotonesInsertarFD"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por División"
                android:id="@+id/rbtnDivisonInsertFD"
                android:layout_marginLeft="50dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por Descripcion"
                android:id="@+id/rbtnDescripcionInsertFD"
                android:layout_marginLeft="60dp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBuscarFD"
                android:text="Buscar"
                android:layout_marginLeft="10dp"/>

            <RadioGroup
                android:id="@+id/RGBotonesBusquedaFD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtnDescripcionAFD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Descripcion del Área"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/rbtnDivisionAFD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="División del Área"
                    android:textSize="10dp" />

                <RadioButton
                    android:id="@+id/rbtnEdificioAFD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id del Edificio"
                    android:textSize="10dp" />

            </RadioGroup>

    </LinearLayout>



    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvSubDepasFD"
        android:layout_marginTop="10dp"/>



</LinearLayout>